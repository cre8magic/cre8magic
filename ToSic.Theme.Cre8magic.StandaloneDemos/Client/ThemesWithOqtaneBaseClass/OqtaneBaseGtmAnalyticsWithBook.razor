@namespace ToSic.Theme.Cre8magic.StandaloneDemos
@inherits ThemeBase
@using ToSic.Cre8magic
@using ToSic.Cre8magic.Act
@using ToSic.Cre8magic.OqtaneBs5
@using ToSic.Cre8magic.Settings
@inject IMagicAct MagicAct
@code {
    public override string Name => PageTitle;

    private const string PageTitle = "Oqtane Base Theme - Gtm Analytics with Book";

    private const string PageDescription = "This is a standard Oqtane ThemeBase with the Gtm Analytics Control and Book.";

    public override string Panes => PaneNames.Default;
}
@code {

    public static MagicBook Book => new()
    {
        Source = nameof(Book),
        Chapter = new()
        {
            Analytics = new() { GtmId = "GTM-T8W5TBL", PageViewTrack = true, },
        }
    };
}
@{
    MagicAct.UseBook(Book);
}

@* Default box containing menu, intro text etc. - contents is between the tags *@
<MainDefault Name="@Name" Title="@PageTitle" Description="@PageDescription">
    @* Add more variations *@
    <ChildContent>
        <h3>Default - nothing to show</h3>
        <p>
            Look at the JS console to monitor that the GTM is being triggered.
        </p>

        <!--<CodeSnippetForDocs>-->
            <MagicAnalytics></MagicAnalytics>
        <!--</CodeSnippetForDocs>-->

    </ChildContent>
</MainDefault>
