{
    // This is the TS Config to generate Oqtane compatible ES2015 Modules
    "compileOnSave": true,
    "compilerOptions": {
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": false,
        "module": "ES2015",
        "sourceMap": true,
        "target": "ES2015",
        "allowJs": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "lib": [ "es6", "dom" ],
        "outDir": "./dist",
    },
    "include": [ "./src/scripts/interop/**/*.ts" ]
}
